{
  "compilerOptions": {
    "lib": [
      "ESNext",
    ],
    "outDir": "./dist",
    "module": "NodeNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "*"
      ]
    },
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
